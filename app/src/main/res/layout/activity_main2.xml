<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cruz.labexercise2.Main2Activity">

    <Button
        android:id="@+id/btn_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:textSize="8pt"
        android:onClick="loadInfo"
        android:text="LOAD SHARED PREFERENCES"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:textSize="8pt"
        android:text="LOAD INTERNAL STORAGE"
        android:layout_below="@+id/btn_display"
        android:layout_alignEnd="@+id/button7"
        android:onClick="loadInfo2"/>

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8pt"
        android:text="CLEAR"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/button5"
        android:onClick="clearAll"/>

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8pt"
        android:onClick="toBack"
        android:text="BACK"
        android:layout_marginEnd="13dp"
        android:layout_alignBaseline="@+id/button6"
        android:layout_alignBottom="@+id/button6"
        android:layout_alignEnd="@+id/btn_display" />

    <TextView
        android:id="@+id/tv_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10pt"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10pt"
        android:layout_marginTop="43dp"
        android:text="Display:"
        android:layout_below="@+id/button6"
        android:layout_alignStart="@+id/button6" />

    <TextView
        android:id="@+id/tv_display1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="9pt"
        android:layout_alignBottom="@+id/textView4"
        android:layout_toEndOf="@+id/button6" />

</RelativeLayout>
